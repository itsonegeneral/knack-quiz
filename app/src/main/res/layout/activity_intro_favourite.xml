<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".IntroFavouriteActivity">



   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="wrap_content"
           android:id="@+id/tv_skipFavourites"
           android:padding="10dp"
           android:layout_gravity="end"
           android:text="Skip"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="20dp"
           android:textColor="@color/colorTextLight"
           android:background="?android:attr/selectableItemBackground"
           android:clickable="true"
           android:focusable="true"
           android:layout_height="wrap_content"/>

       <TextView
           android:layout_width="wrap_content"
           android:text="Pick some favourites"
           android:padding="10dp"
           android:textColor="#D7FFFFFF"
           android:textSize="16sp"
           android:layout_height="wrap_content"/>


   </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:id="@+id/imgBtn_submitFavourites"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ic_navigate_next_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_height="40dp"/>

</RelativeLayout>