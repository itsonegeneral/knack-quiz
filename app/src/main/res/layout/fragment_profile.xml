<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_profileSignInLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_account"
            android:transitionName="imagetransition" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are not signed in !"
            android:textColor="@color/colorTextLight"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_signinFragProfile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/colorNavBarGreen"
            app:rippleColor="#92E4B7" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_loggedInProfileFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorCardPrimaryDark"
            app:contentPadding="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_userNameProfileFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/muli"
                        android:padding="10dp"
                        android:text="Rithik Sabhal"
                        android:textColor="@color/colorTextHighEmphasise"
                        android:textSize="17sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_level_guard" />

                        <TextView
                            android:id="@+id/tv_userLevelPosProfileFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli"
                            android:gravity="top"
                            android:text="Soldier"
                            android:textColor="@color/colorTextLowEmphasise"
                            android:textSize="16sp" />


                    </LinearLayout>


                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profileFragment"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:padding="5dp"

                    android:src="@drawable/ic_account" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorCardPrimaryDark"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:text="Email"
                    android:textColor="@color/colorTextLowEmphasise" />

                <TextView
                    android:id="@+id/tv_emailProfilFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:text=""
                    android:textColor="@color/colorTextHighEmphasise"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/muli"
                    android:text="Phone"
                    android:textColor="@color/colorTextLowEmphasise" />

                <TextView
                    android:id="@+id/tv_phoneProfilFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:text="(+91) 9037-294350"
                    android:textColor="@color/colorTextHighEmphasise"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/muli"
                    android:text="DOB"
                    android:textColor="@color/colorTextLowEmphasise" />

                <TextView
                    android:id="@+id/tv_dobProfilFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:text="16 May 1999"
                    android:textColor="@color/colorTextHighEmphasise"
                    android:textSize="16sp" />


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorCardPrimaryDark"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:padding="10dp"
                    android:text="Gamplay"
                    android:textColor="@color/colorTextLowEmphasise" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_margin="3dp"
                    android:id="@+id/pgBar_levelProfileFragment"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:min="0"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:progress="70"
                    android:progressDrawable="@drawable/gradient_progress_bar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp">


                    <TextView
                        android:id="@+id/tv_startLevelProfilFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:paddingStart="8dp"
                        android:text="291"
                        android:textColor="@color/colorTextLowEmphasise"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/muli"
                        android:gravity="center"
                        android:paddingStart="10dp"

                        android:text="Level"
                        android:textColor="@color/colorTextLowEmphasise"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_endProfilFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:paddingStart="10dp"
                        android:paddingEnd="4dp"
                        android:text="291"
                        android:textColor="@color/colorTextLowEmphasise"
                        android:textSize="16sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    app:cardBackgroundColor="@color/colorCardPrimaryDark"
                    app:cardElevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:padding="10dp"
                        android:text="View Statistics"
                        android:textColor="@color/colorTextHighEmphasise"

                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    app:cardBackgroundColor="@color/colorCardPrimaryDark"
                    app:cardElevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:padding="10dp"
                        android:text="Redeem Rewards"
                        android:textColor="@color/colorTextHighEmphasise"
                        android:id="@+id/tv_redeemRewardsProfile"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    app:cardBackgroundColor="@color/colorCardPrimaryDark"
                    app:cardElevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli"
                        android:padding="10dp"
                        android:text="Support"
                        android:textColor="@color/colorTextHighEmphasise"

                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</RelativeLayout>