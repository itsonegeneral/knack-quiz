<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_profileSignInLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_account"
            android:transitionName="imagetransition" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are not signed in !"
            android:textColor="@color/colorTextLight"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_signinFragProfile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/colorNavBarGreen"
            app:rippleColor="#92E4B7" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_testlogin"
        android:text="Logged In "
        android:textSize="19sp"
        android:layout_centerInParent="true"
        android:textColor="@color/colorTextHighEmphasise"
        android:layout_height="wrap_content"/>

</RelativeLayout>