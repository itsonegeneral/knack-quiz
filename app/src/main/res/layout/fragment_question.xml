<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    xmlns:custom="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">




    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="10dp">


            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_horizontal">

                <com.rstudio.knackquiz.helpers.CircleProgressBar
                    android:layout_width="match_parent"
                    app:progress="100"
                    android:id="@+id/circleProgressBar"
                    app:progressBarThickness="5dp"
                    android:layout_height="match_parent"/>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_questionTime"
                    android:layout_gravity="center"
                    android:text="15"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

            </FrameLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/mttv_question"
                android:padding="20dp"
                android:text="Which Color has the Longest Wavelength?"
                android:textColor="#ECECEC"
                android:textSize="18sp" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/card_questionOption1"

                app:cardBackgroundColor="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_questionOption1"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/background_option"
                    android:padding="20dp"
                    android:text="Violet"
                    android:textColor="@color/colorTextOffWhite" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/card_questionOption2"
                android:clickable="true"
                android:focusable="true"
                style="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_questionOption2"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_option"
                    android:padding="20dp"
                    android:text="Red"
                    android:textColor="@color/colorTextOffWhite" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_questionOption3"
                android:clickable="true"
                android:focusable="true"
                style="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_questionOption3"
                    android:textSize="16sp"
                    android:background="@drawable/background_option"
                    android:padding="20dp"
                    android:text="Blue"
                    android:textColor="@color/colorTextOffWhite"  />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/card_questionOption4"
                android:clickable="true"
                android:focusable="true"
                style="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_option"
                    android:padding="20dp"
                    android:text="Green"
                    android:id="@+id/tv_questionOption4"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextOffWhite"  />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>