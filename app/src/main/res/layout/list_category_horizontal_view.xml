<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:id="@+id/rl_categoryListHolder"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">



        <ImageView
            android:src="@drawable/ic_cat_cricket"
            android:layout_width="70dp"
            android:id="@+id/img_iconCategoryList"
            android:transitionName="@string/toolbar_transition"
            android:layout_marginBottom="5dp"
            android:layout_height="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_categoryNameList"
            android:fontFamily="@font/muli"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:text="Crssicket" />

    </LinearLayout>


    <ImageView
        android:layout_width="20dp"
        android:id="@+id/img_tickCategoryList"
        android:visibility="gone"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_tick"
         />

</RelativeLayout>