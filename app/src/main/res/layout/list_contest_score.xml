<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:theme="@style/DarkAppTheme"
        android:background="@color/colorCardPrimaryLight"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:gravity="center"
                android:fontFamily="@font/muli"
                android:id="@+id/tv_positionContestScoreList"
                android:text="10"
                android:textColor="@color/colorTextHighEmphasise"
                android:padding="6dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/tv_nameContestScoreList"
                android:layout_weight="1"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:text="Rithik S"
                android:textColor="@color/colorTextHighEmphasise"
                android:padding="6dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="60dp"
                android:textColor="@color/colorTextHighEmphasise"
                android:gravity="center"
                android:fontFamily="@font/muli"
                android:id="@+id/tv_scoreContestScoreList"
                android:text="10"
                android:padding="6dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorTextLowEmphasise"
            android:layout_height="1dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>