<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:animateLayoutChanges="true"
    android:orientation="vertical">



        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/img_toolbarProfile"
                    android:transitionName="imagetransition"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_account" />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="Guest_3312341"
                       android:layout_marginStart="3dp"
                       android:textSize="17sp"
                       android:maxLines="1"
                       android:fontFamily="@font/muli"
                       android:id="@+id/tb_tvusernameMainCommmon"
                       android:textColor="#fff"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="Level 23"
                       android:layout_marginStart="3dp"
                       android:fontFamily="@font/muli"
                       android:maxLines="1"
                       android:id="@+id/tb_tvLevelMainCommmon"
                       android:textColor="@color/colorTextLowEmphasise"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>


            <include layout="@layout/header_coin_layout"/>


        </LinearLayout>
</com.google.android.material.appbar.MaterialToolbar>